<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", "Segoe UI", sans-serif;
      }

      body {
        background: linear-gradient(-45deg, #fbc2eb, #a6c1ee, #ffe3f1, #ffd6ec);
        background-size: 400% 400%;
        animation: flow 10s ease infinite;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 40px 20px;
      }

      @keyframes flow {
        0% {
          background-position: 0% 50%;
        }

        50% {
          background-position: 100% 50%;
        }

        100% {
          background-position: 0% 50%;
        }
      }

      .container {
        background-color: #fff;
        padding: 40px 30px;
        border-radius: 20px;
        box-shadow: 0 12px 30px rgba(255, 105, 180, 0.2);
        width: 100%;
        max-width: 900px;
        text-align: center;
        animation: fadeIn 0.8s ease-in-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }

        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      h1 {
        font-size: 2.5rem;
        color: #d63384;
        margin-bottom: 20px;
      }

      .result {
        margin: 20px 0;
        background: linear-gradient(90deg, #fbc2eb, #a6c1ee);
        color: #6d326d;
        padding: 14px 20px;
        border-radius: 12px;
        font-weight: 500;
        box-shadow: 0 4px 12px rgba(255, 182, 193, 0.3);
      }

      a {
        color: #e91e63;
        text-decoration: none;
        font-weight: 600;
      }

      a:hover {
        text-decoration: underline;
      }

      form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 20px;
      }

      input[type="text"] {
        flex: 1;
        min-width: 250px;
        padding: 12px 16px;
        border-radius: 12px;
        border: 1.5px solid #f8c1d1;
        font-size: 16px;
        background-color: #fff0f6;
        transition: 0.3s ease;
      }

      input:focus {
        border-color: #ff69b4;
        box-shadow: 0 0 8px rgba(255, 105, 180, 0.25);
        background-color: #fff8fc;
      }

      button {
        padding: 12px 24px;
        background: linear-gradient(135deg, #ff6fd8 0%, #fdb99b 100%);
        color: #fff;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s ease;
        box-shadow: 0 4px 10px rgba(255, 105, 180, 0.2);
      }

      button:hover {
        transform: scale(1.03);
        box-shadow: 0 6px 14px rgba(255, 105, 180, 0.3);
      }

      .analytics-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        gap: 24px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 0 12px rgba(255, 105, 180, 0.1);
      }

      thead {
        background: linear-gradient(to right, #f478c9, #c56cf0);
        color: white;
      }

      th,
      td {
        padding: 14px 16px;
        text-align: center;
        font-size: 15px;
      }

      tbody tr:nth-child(even) {
        background-color: #fff5fa;
      }

      tbody tr:hover {
        background-color: #fce7f3;
      }

      #toggleBtn {
        padding: 10px 18px;
        background: linear-gradient(to right, #f093fb, #f5576c);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 15px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s ease;
      }

      #toggleBtn:hover {
        transform: scale(1.03);
        opacity: 0.9;
      }

      @media (max-width: 768px) {
        th,
        td {
          font-size: 13px;
          padding: 10px;
        }

        h1 {
          font-size: 1.8rem;
        }
      }
      .table-wrapper {
        width: 100%;
        overflow-x: auto;
        border-radius: 12px;
      }

      td,
      th {
        white-space: nowrap;
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      td a {
        display: inline-block;
        max-width: 180px;
        word-break: break-word;
        overflow-wrap: anywhere;
        white-space: nowrap;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>ðŸŒ¸ URL Shortener</h1>

      <% if (locals.id) { %>
      <div class="result">
        âœ… Short URL:
        <a href="/url/<%= id %>" target="_blank">
          http://localhost:8001/url/<%= id %>
        </a>
      </div>
      <% } %>

      <form method="POST" action="/url">
        <input
          type="text"
          name="url"
          placeholder="Paste your long URL here..."
          required
        />
        <button type="submit">Generate Short URL</button>
      </form>

      <div class="analytics-wrapper">
        <button id="toggleBtn" onclick="toggleAnalytics()">
          ðŸ“Š Show My Link Analytics
        </button>

        <div id="analyticsTable" style="display: none; margin-top: 30px">
          <% if (locals.urls) { %>
          <div class="table-wrapper">
            <table>
            <thead>
              <tr>
                <th>S.No</th>
                <th>Short Id</th>
                <th>Short URL</th>
                <th>Redirect URL</th>
                <th>Clicks</th>
                <% if (locals.isAdmin) { %>
                <th>Created By</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <% urls.forEach((url, index)=> { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= url.shortId %></td>
                <td>
                  <a href="/url/<%= url.shortId %>" target="_blank">
                    http://localhost:8001/url/<%= url.shortId %>
                  </a>
                </td>

                <td>
                  <a href="<%= url.redirectUrl %>" target="_blank">
                    <%= url.redirectUrl.length> 40 ? url.redirectUrl.slice(0,
                    40) + "..." : url.redirectUrl %>
                  </a>
                </td>
                <td><%= url.visitHistory.length %></td>
                <% if (locals.isAdmin) { %>
                <td><%= url.createdBy?.email || "Unknown" %></td>
                <% } %>
              </tr>
              <% }) %>
            </tbody>
          </table>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <script>
      function toggleAnalytics() {
        const table = document.getElementById("analyticsTable");
        const button = document.getElementById("toggleBtn");

        if (table.style.display === "none") {
          table.style.display = "block";
          button.textContent = "ðŸ™ˆ Hide Analytics";
        } else {
          table.style.display = "none";
          button.textContent = "ðŸ“Š Show My Link Analytics";
        }
      }
    </script>
  </body>
</html>
